<?xml version="1.0" encoding="utf-8"?>
<resources>

	<attr name="emptyImage" format="reference"/>
	<attr name="showRealImageSize" format="boolean"/>

	<declare-styleable name="NetworkImageView">
		<attr name="emptyImage"/>
		<attr name="showRealImageSize"/>
	</declare-styleable>

	<declare-styleable name="CircleImageView">
		<attr name="emptyImage"/>
		<attr name="circleSize" format="integer"/>
		<attr name="frameColor" format="color"/>
		<attr name="frameStroke" format="integer"/>
	</declare-styleable>

	<declare-styleable name="RoundImageView">
		<attr name="emptyImage"/>
		<attr name="showRealImageSize"/>
		<attr name="cornerSize" format="float"/>
		<attr name="cornerSizeTopLeft" format="float"/>
		<attr name="cornerSizeTopRight" format="float"/>
		<attr name="cornerSizeBottomRight" format="float"/>
		<attr name="cornerSizeBottomLeft" format="float"/>
		<attr name="maxSize" format="float"/>
		<attr name="minSize" format="float"/>
	</declare-styleable>

</resources>
